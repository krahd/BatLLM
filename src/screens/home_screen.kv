                        size_hint_y: None
                        height: "48dp"
                        text_size: self.width, self.height
                        font_size: "16sp"
                        valign: "middle"
                        halign: "left"    
                        canvas.before:
                            Color:                              
                                rgba: 0.86, 0.73, 0.91, 1 # Header "Player Two"                             	
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            
                                    
                    ScrollView: # Prompt history 2
                        size_hint: (1, .5)
                        bar_width: 20
                        do_scroll_x: False
                        do_scroll_y: True
                        scroll_type: ['bars', 'content'] 
                        id: scroll_prompt_history_player_2

                        TextInput:
                            padding: 20, 20
                            id: prompt_history_player_2                        
                            text:""                             
                            markup: True                                                      
                            multiline: True
                            readonly: True                        
                            height: self.minimum_height
                            size_hint_y: None
                            height: max(self.minimum_height, scroll_prompt_history_player_2.height)
                            scroll_y: 1
                            cursor_blink: True                        
