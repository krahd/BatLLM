
#:kivy 2.3.1
#:import dp kivy.metrics.dp

<Overlay@Widget>:

    darken: 0.0
    desaturation: 0.0

    canvas.before: 
        
        Color: # This layer fakes a desaturation filter by painting a transparent gray
            rgba: 0.5, 0.5, 0.5, self.desaturation
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, self.darken
        Rectangle:
            pos: self.pos
            size: self.size



<HomeScreen>:
    BoxLayout:  # overlay    
        orientation: "vertical"

        BoxLayout: # splits the screen in main and footer
            orientation: "vertical"
                                
            BoxLayout: # main above footer, split into 3 columns: prompts, commands, game
                orientation: "horizontal"
                size_hint_y: 0.85
                padding: 0
                spacing: 0

                canvas.before:
                    Color:                              
                        rgba: 0, 0, 0, 1                    
                    Rectangle:
                        pos: self.pos
                        size: self.size
            
                BoxLayout:   # The first column column is divided in 10, 5 per player            
                    orientation: "vertical"
                    size_hint_x: 0.306  
                    padding: 0, 1, 1, 1
                    spacing: 1

                    canvas.before:
                        Color:                                                      
                            rgba: 0, 0, 0, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:  # "Player One"
                        text: "  [b]Player One[/b]"
                        markup: True                                                      
                        color: 0, 0, 0, 1
                        size_hint_y: None
                        size_hint_x: 1
                        
                        height: "48dp"
                        text_size: self.width, self.height
                        font_size: "16sp"
                        valign: "middle"
                        halign: "left"       
                        canvas.before:
