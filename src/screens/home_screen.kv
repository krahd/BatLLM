                                id: output_history_player_1
                                text: ""
                                markup: True
                                valign: 'top'
                                halign: 'left'
                                text_size: self.width - dp(40), None
                                size_hint_y: None
                                height: self.texture_size[1] + dp(40)
                                padding: dp(20), dp(10)

                                canvas.before:
                                    Color:
                                        rgba: .75, .83, .95, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size


                        Widget:
                            size_hint_y: None
                            height: dp(.5) 
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size       
                        Button:
                            text: "[color=#000000][b]History[/b][/color]"
                            font_size: "16sp"
                            size_hint_y: ".026dp"
                            on_press: root.go_to_history_screen(1)  
                            background_color: 1, 1, 1, 1
                            background_normal: "" # necessary for colours to work
                            background_down: ""                              
                            markup: True                                                   

                        Widget:
                            size_hint_y: None
                            height: dp(2.5) 
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size                                  


                    BoxLayout: # Player 2's commands and output history                    
                        orientation: "vertical"                            
                        padding: 1, 0, 1, 0
                        spacing: 1

                        canvas.before:
                            Color:                        
                                rgba: 0.9, 0.85, 0.95, 1   
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        Label: # Title "Commands" 2
                            size_hint_x: 1
                            size_hint_y: None                        
                            text: "[b]Commands[/b]"
                            markup: True
                            halign: "left"                            
                            color: 0, 0, 0, 1    
                            height: dp(48)
                            canvas.before:
                                Color:                                
                                    rgba: 0.86, 0.73, 0.91, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size                                        
                                
                        Widget:
                            size_hint_y: None
                            height: dp(.5)     # exactly 1px high
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size        


                        ScrollView: # LLM output parsed by Bot 2                       
                            bar_width: 20
                            do_scroll_x: False
                            do_scroll_y: True                    
                            scroll_type: ['bars', 'content']  
                            id: scroll_output_history_player_2                                               
                            
                            Label:
                                id: output_history_player_2
                                text: ""
                                markup: True
                                valign: 'top'
                                halign: 'left'
                                text_size: self.width - dp(40), None
                                size_hint_y: None
                                height: self.texture_size[1] + dp(40)
                                padding: dp(20), dp(20)
                                canvas.before:
                                    Color:
                                        rgba:  0.9, 0.85, 0.95, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                                

                        Widget:
                            size_hint_y: None
                            height: dp(.5) 
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size       
                        Button:
                            text: "[color=#000000][b]History[/b][/color]"
                            font_size: "16sp"
                            size_hint_y: ".026dp"
                            on_press: root.go_to_history_screen(2)  
                            background_color: 1, 1, 1, 1
                            background_normal: "" # necessary for colours to work
                            background_down: ""                              
                            markup: True                                                                                             
                    
            
                BoxLayout:  # Third Column (game area) is also divided in three.
                    orientation: "vertical"
                    padding: 1
                    spacing: 1
                    canvas.before:
                        Color:                        
                            rgba: 0, 0, 0, 1 
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    

                    BoxLayout:  # Header with two labels
                        orientation: "horizontal"
                        size_hint: 1, None
                        height: "48dp"                      
                        padding: 60, 0, 0, 0
                        spacing: 0
                        canvas.before:
                            Color:                              
                                rgba: .7, .73, .7, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    
                        Label:
                            font_size: "20sp"
                            text: "[b]BatLLM[/b]"
                            
                            size_hint_x: None                    
                            size_hint_y: None
                            width: 250
                            
                            id: header_label                                 
                            markup: True

                            halign: "left"
                            valign: "middle"

                            color: .2, .2, .2, 1
                            text_size: self.width, self.height


                        Label:
                            id: game_title_label
                            font_size: "16sp"
                            
                            size_hint_x: 1
                            size_hint_y: None
                                                    
                            markup: True

                            halign: "left"
                            valign: "middle"

                            color: .3, .3, .3, 1                    
                            text_size: self.width, self.height

                        

                    AnchorLayout:
                        anchor_x: "center"
                        anchor_y: "center"                    
                        canvas.before:
                            Color:                              
                                rgba: .8, .83, .8, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size                                                                    
                        GameBoard:
                            id: game_board
                            size_hint: 1, 1



                                        

            BoxLayout:  # Footer
                orientation: "horizontal"            
                size_hint_y: None
                height: "40dp"
                padding: "0dp"
                font_size: "16sp"

                canvas.before:
                    Color:
                        rgba: 0.3, 0.3, 0.4, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: "https://github.com/krahd/BatLLM"
                    font_size: "16sp"
                    halign: "left"
                    color: 1,1,1,1
                    size_hint_x: 2

                Label:
                    text: "BatLLM 0.0.1"
                    font_size: "16sp"
                    color: 1, 1, 1, 1
                    halign: "left"
                    size_hint_x: 4
                    

                Button:
                    text: "Settings"
                    font_size: "16sp"
                    on_press: root.go_to_settings_screen()

                Button:
                    text: "New Game"
                    font_size: "16sp"
                    on_press: root.start_new_game()

                Button:
                    text: "Save Session"
                    font_size: "16sp"
                    on_press: root.save_session()  

    
    
    
    
    Overlay:
        id: overlay
