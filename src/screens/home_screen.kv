                        bar_width: 20
                        do_scroll_x: False
                        do_scroll_y: True                    
                        scroll_type: ['bars', 'content'] 
                        id: scroll_prompt_player_1

                        TextInput:
                            padding: 20, 20
                            id: prompt_player_1                                            
                            hint_text: ""
                            markup: True                                                      
                            multiline: True
                            readonly: False
                            size_hint_y: None
                            scroll_y: 1                            
                            height: max(self.minimum_height, scroll_prompt_player_1.height)                            
                            cursor_blink: True                                      
                            background_color: .79, .87, .99, 1 # input 1
