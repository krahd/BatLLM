                            foreground_color: 0, 0, 0, 1
                            background_normal: ""
                            background_down: ""  
                                            
                    BoxLayout: # Prompt History 2 Buttons
                        orientation: "horizontal"
                        height: "20dp"
                        padding: 0, 1, 0, 1
                        spacing: 1
                        size_hint_y: None

                        canvas.before:
