                            scroll_y: 1  
                            height: max(self.minimum_height, scroll_prompt_player_2.height)                    
                            cursor_blink: True                          
                            background_color: 0.98, 0.86, .99, 1 # input 2  
                            foreground_color: 0, 0, 0, 1     
                            background_normal: ""
                            background_down: ""                                 

                    BoxLayout: # Prompt buttons 2
                        orientation: "horizontal"
                        size_hint_y: None
                        height: "30dp"
                        padding: 0, 1, 0, 0
                        spacing: 2

                        canvas.before:
                            Color:                              
                                rgba: 0, 0, 0, 1   # behind the prompt buttons 2
                            Rectangle:
                                pos: self.pos
                                size: self.size
                                        
                        Button:
                            background_color: .6, .5, .4, 1
                            background_normal: ""
                            background_down: ""  
                            text: "Submit"
                            bold: 1
                            on_press: root.submit_prompt(2)

                        Button:
                            background_color: .4, .5, .6, 1
                            background_normal: ""
                            background_down: ""  
                            text: "Load"
                            bold: 1
                            on_press: root.load_prompt(2)

                        Button:
                            background_color: .4, .6, .5, 1
                            background_normal: ""
                            background_down: ""   
                            text: "Save"
                            bold: 1
                            on_press: root.save_prompt(2)

            
                BoxLayout:  # The second column is divided in 4, 2 per player: Commands and Output History                
                    orientation: "vertical"
                    size_hint_x: 0.10 
                    size_hint_y: 1          
                    padding: 0 #, 1, 0, 1   
                    spacing: 0
                    
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1                        
                        Rectangle:  
                            pos: self.pos
                            size: self.size
                        
                    BoxLayout: # Player 1's commands and output history
                        orientation: "vertical"
                        padding: 0 #1, 0, 1, 5
                        spacing: 0
                        canvas.before:
                            Color:                           
                                rgba: .75, .83, .95, 1 
                                #rgba: 0, 0, 0, 1     
                            Rectangle:
                                pos: self.pos
                                size: self.size
                            
                        Label: # Title "Commands" 1
                            size_hint_x: 1
                            size_hint_y: None                        
                            text: "[b]Commands[/b]"                           
                            markup: True
                            halign: "left"                                                        
                            color: 0, 0, 0, 1    
                            height: dp(48)
                            canvas.before:
                                Color: 
                                    rgba: .68, .76, .88, 1   # command one         
                                Rectangle:
                                    pos: self.pos
                                    size: self.size                                  

                        Widget:
                            size_hint_y: None
                            height: dp(.5)     # exactly 1px high
                            canvas.before:
                                Color:
                                    rgba: 0, 0, 0, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size                             
                        
                        ScrollView: # LLM output parsed by Bot 1
                            size_hint: (1, 1)
                            bar_width: 20                        
                            do_scroll_x: False
                            do_scroll_y: True                    
                            scroll_type: ['bars', 'content']             
                            id: scroll_output_history_player_1
                                                         
                            
